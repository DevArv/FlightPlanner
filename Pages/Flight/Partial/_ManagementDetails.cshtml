@model FlightPlanner.ViewModels.FlightPlannerDetailsViewModel

<div class="row">
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.AltitudeFeet)" class="form-label">Altitud Crucero</label>
        <input type="number" class="form-control" id="@nameof(Model.AltitudeFeet)" value="@Model.AltitudeFeet" readonly="readonly" />
    </div>
    
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.FlightSpecs.NauticalMiles)" class="form-label">Distancia de Vuelo (NM)</label>
        <input type="number" class="form-control" id="@nameof(Model.FlightSpecs.NauticalMiles)" value="@Model.FlightSpecs?.NauticalMiles" readonly="readonly" />
    </div>
    
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.FlightSpecs.CruiseSpeedKnots)" class="form-label">Velocidad Crucero Recomendada</label>
        <input type="number" class="form-control" id="@nameof(Model.FlightSpecs.CruiseSpeedKnots)" value="@Model.FlightSpecs?.CruiseSpeedKnots" readonly="readonly" />
    </div>
    
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.FlightSpecs.FlightEstimatedHourTime)" class="form-label">Tiempo Estimado de Vuelo (Horas)</label>
        <input type="number" class="form-control" id="@nameof(Model.FlightSpecs.FlightEstimatedHourTime)" value="@Model.FlightSpecs?.FlightEstimatedHourTime" readonly="readonly" />
    </div>
    
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.FlightSpecs.FlightEstimatedMinutesTime)" class="form-label">Tiempo Estimado de Vuelo (Minutos)</label>
        <input type="number" class="form-control" id="@nameof(Model.FlightSpecs.FlightEstimatedMinutesTime)" value="@Model.FlightSpecs?.FlightEstimatedMinutesTime" readonly="readonly" />
    </div>
</div>