@using FlightPlanner.Enums
@model FlightPlanner.ViewModels.FlightPlannerSimpleViewModel

<div class="row">
    @if (Model.ID != Guid.Empty)
    {
        <div class="col-md-3 mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="@nameof(Model.IsCompleted)" @(Model.IsCompleted ? "checked" : "") />
                <label class="form-check-label" for="@nameof(Model.IsCompleted)">Vuelo Completado</label>
            </div>
        </div>
    }
</div>

<hr />

<div class="row">
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.Date)" class="form-label">Fecha de agenda</label>
        <input type="date" class="form-control" id="@nameof(Model.Date)" value="@Model.Date.ToString(Constants.Global.DATETIME_FORMAT)"/>
    </div>
    
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.AircraftModel)" class="form-label">Modelo de Avi√≥n</label>
        <select class="form-select" style="background-color: lightyellow;" id="@nameof(Model.AircraftModel)" name="@Model.AircraftModel">
            <option value="@((int)AircraftModelEnum.DEFAULT)" selected="@((Model.AircraftModel == AircraftModelEnum.DEFAULT))"></option>
            <option value="@((int)AircraftModelEnum.CESSNA_CITATION_LONGITUDE)" selected="@((Model.AircraftModel == AircraftModelEnum.CESSNA_CITATION_LONGITUDE))">Cessna Citation Longitude</option>
            <option value="@((int)AircraftModelEnum.EMBRAER_E190)" selected="@((Model.AircraftModel == AircraftModelEnum.EMBRAER_E190))">Embraer E190</option>
        </select>
    </div>
    
    <div class="col-md-3 mb-3">
        <label for="@nameof(Model.FlightType)" class="form-label">Tipo de Vuelo</label>
        <select class="form-select" style="background-color: lightyellow;" id="@nameof(Model.FlightType)" name="@Model.FlightType">
            <option value="@((int)FlightTypesEnum.DEFAULT)" selected="@((Model.FlightType == FlightTypesEnum.DEFAULT))"></option>
            <option value="@((int)FlightTypesEnum.SHORT_FLIGHT)" selected="@((Model.FlightType == FlightTypesEnum.SHORT_FLIGHT))">Vuelo Corto ( < 350 NM )</option>
            <option value="@((int)FlightTypesEnum.NORMAL_FLIGHT)" selected="@((Model.FlightType == FlightTypesEnum.NORMAL_FLIGHT))">Vuelo Mediano Alcance ( 351 - 1499 NM )</option>
            <option value="@((int)FlightTypesEnum.HIGH_ALTITUDE_FLIGHT)" selected="@((Model.FlightType == FlightTypesEnum.HIGH_ALTITUDE_FLIGHT))">Vuelo Alta Altitud ( > 1500 NM )</option>
        </select>
    </div>
</div>