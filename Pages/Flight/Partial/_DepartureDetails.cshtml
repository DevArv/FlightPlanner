@using FlightPlanner.Constants
@using FlightPlanner.Tools
@model FlightPlanner.ViewModels.FlightPlannerDetailsViewModel

<div class="row">
    @{
        var icao = new FormFields();
        icao.Value = Model.ICAODeparture;
        icao.Name = nameof(Model.ICAODeparture);
        icao.Caption = "ICAO Aeropuerto de Salida";
        icao.IsDisabled = true;
        Html.RenderPartial(PartialRoutes.SHARED_TEMPLATE + DataTypes.ICAO, icao);
    }

    @{
        var airportName = new FormFields();
        airportName.Value = Model.DepartureAirportName;
        airportName.Name = nameof(Model.DepartureAirportName);
        airportName.Caption = "Nombre Aeropuerto de Salida";
        airportName.IsDisabled = true;
        Html.RenderPartial(PartialRoutes.SHARED_TEMPLATE + DataTypes.AirportName, airportName);
    }
    
    @{
        var runway = new FormFields();
        runway.Value = Model.DepartureRunway;
        runway.Name = nameof(Model.DepartureRunway);
        runway.Caption = "Pista de Salida";
        runway.IsDisabled = true;
        Html.RenderPartial(PartialRoutes.SHARED_TEMPLATE + DataTypes.Runway, runway);
    }

    @{
        var baroPressure = new FormFields();
        baroPressure.Value = Model.BaroPressureDeparture;
        baroPressure.Name = nameof(Model.BaroPressureDeparture);
        baroPressure.Caption = "BARO del Aeropuerto de Salida";
        baroPressure.IsDisabled = true;
        Html.RenderPartial(PartialRoutes.SHARED_TEMPLATE + DataTypes.BaroPressure, baroPressure);
    }
    
    @{
        var transitionAltitude = new FormFields();
        transitionAltitude.Value = Model.TransitionAltitudeDeparture.ToString(Global.FP_FORMAT_NUMBER);
        transitionAltitude.Name = nameof(Model.TransitionAltitudeDeparture);
        transitionAltitude.Caption = "Altitud de Transici√≥n de Salida";
        transitionAltitude.IsDisabled = true;
        transitionAltitude.ToolTip = "Altitud en la que se setea el BARO Standard y se configuran las luces.";
        Html.RenderPartial(PartialRoutes.SHARED_TEMPLATE + DataTypes.TransitionAltitude, transitionAltitude);
    }
</div>