@page
@model FlightPlanner.Pages.Login
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post">
                <h1 class="text-center mb-4">Iniciar sesión</h1>
                <div class="mb-3">
                    <label asp-for="Credentials.UserName" class="form-label">Usuario</label>
                    <input asp-for="Credentials.UserName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Credentials.Password" class="form-label">Contraseña</label>
                    <input asp-for="Credentials.Password" type="password" class="form-control" />
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.Error))
                {
                    <div class="text-danger mb-3">@Model.Error</div>
                }
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </form>
        </div>
    </div>
</div>